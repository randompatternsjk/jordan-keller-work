---
export interface Props {
  children: any;
}

const { children } = Astro.props;
---

<hr class="my-12" />
<div class="flex flex-wrap gap-4 my-8 md:my-4">
  <div class="flex flex-col md:basis-1/2">
    <div class="flex mb-2">
      <slot name="title" />
    </div>
    <div class="flex basis-full prose">
      <slot name="description" />
    </div>
  </div>

  <div
    class="md:basis-1/3 flex flex-col prose md:text-right md:justify-end lg:ml-auto"
  >
    <slot name="duties" />
  </div>
</div>
