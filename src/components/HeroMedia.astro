---
// filepath: /Users/jordankeller/Github/jordan-keller-work-portfolio/src/components/HeroMedia.astro
type Props = {
  heroImage?: string;
  featuredVideo?: string;
};

const { heroImage, featuredVideo } = Astro.props;
---

<div class="w-full">
  {
    featuredVideo ? (
      <iframe
        src={featuredVideo}
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        class="w-full mx-auto shadow-lg aspect-video"
      />
    ) : (
      heroImage && (
        <img src={heroImage} alt="" class="w-full lg:max-w-7xl mx-auto" />
      )
    )
  }
</div>
